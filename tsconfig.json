{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "isolatedModules": true,
        "baseUrl": ".", 
        "paths": {
            "types/*": ["./src/js/types/*"],
            "action/*": ["./src/js/action/*"],
            "models/*": ["./src/js/models/*"],
            "constant/*": ["./src/js/constant/*"],
            "face/*": ["./src/js/face/*"],
            "thirdparty/*": ["./third_party/*"]
        }
    }
}
